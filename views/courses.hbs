<h1>Courses page</h1>
{{#if courses.length}}
{{#each courses}}
<div class="row">
   <div class="col s6 offset-s3">
   <div class="card">
      <div class="card-image">
         <img src="images/sample-1.jpg">
      </div>
      <div class="card-content">
         <span class="card-title">{{title}}</span>
         <p>{{price}}</p>
      </div>
      <div class="card-action">
         <a href="#">This is a link</a>
      </div>
   </div>
   </div>
</div>
{{/each}}
{{else}}
<p>Courses not found</p>
{{/if}}