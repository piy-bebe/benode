<h1>Orders</h1>

{{#if orders.length}}
{{#each orders}}
   <div class="row">
      <div class="col s6 offset-s3">
         <div class="card">
            <div class="card-content">
               <span class="card-title">
                  Заказ <small>{{_id}}</small>
               </span>
               <p>Дата {{date}}</p>
               <p>Количество: {{courses.count}}</p>
               <p>{{user.name}} ({{user.userId.email}})</p>
               <ol>

               </ol>
               <hr>
               <p>Цена: <span class="price">{{#each courses}}{{course.price}}{{/each}}</span></p>
            </div>
         </div>
      </div>
   </div>
{{/each}}
{{else}}
   <p>Заказов нет!</p>
{{/if}}